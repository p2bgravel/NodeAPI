<!-- ////////////// HEADER ////////////// -->
header.bg-light
	.container
		nav.navbar.navbar-expand-lg.navbar-light
			a.navbar-brand(href="#") 
				img(ng-src="{{settings.logo}}", alt="Logo")
			//- Đây là nút sẽ hiển thị trong mobile
			button.navbar-toggler(type="button" data-toggle="collapse" data-target="#fullStackMenu" aria-controls="fullStackMenu" aria-expanded="false" aria-label="Toggle navigation")
				span.fa.fa-bars
			#fullStackMenu.collapse.navbar-collapse
				//- Thuộc tính '.mr-auto' này sẽ đẩy me nu về bên phải 
				.mr-auto
				ul.navbar-nav
					li.nav-item
						a.nav-link(ui-sref="home" ui-sref-active="active") Home
					li.nav-item
						a.nav-link(ui-sref="categories" ui-sref-active="active") Categories
					
